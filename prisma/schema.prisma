// learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------------------------------------
// Enums
// ---------------------------------------------------------------------------

enum Plan {
  FREE
  PRO
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum RiskLevel {
  LOW
  MODERATE
  HIGH
}

// ---------------------------------------------------------------------------
// Models
// ---------------------------------------------------------------------------

model User {
  id                 String    @id @default(uuid())
  fullName           String
  email              String    @unique
  passwordHash       String
  phone              String?
  targetEntry        String?
  attemptNumber      Int?
  preferredSSBCenter String?

  // Subscription (Razorpay)
  plan       Plan      @default(FREE)
  planExpiry DateTime?

  // Leaderboard & Medal System
  medals_total   Int       @default(0)
  medals_weekly  Int       @default(0)
  current_streak Int       @default(0)
  longest_streak Int       @default(0)
  last_login     DateTime?
  is_pro         Boolean   @default(false)

  // Relations
  payments       Payment[]
  medicalResults MedicalResult[]
  piqSubmission  PiqSubmission?
  piqScores      PiqScore[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([medals_total])
  @@index([medals_weekly])
  @@index([current_streak])
}

model Payment {
  id                String        @id @default(uuid())
  userId            String
  razorpayOrderId   String        @unique
  razorpayPaymentId String?
  amount            Int           // in paise (₹499 = 49900)
  status            PaymentStatus @default(PENDING)
  createdAt         DateTime      @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ---------------------------------------------------------------------------
// Medical Readiness Results
// ---------------------------------------------------------------------------

model MedicalResult {
  id             String    @id @default(uuid())
  userId         String

  // Raw inputs
  heightCm       Float
  weightKg       Float
  vision         String    // "6/6" | "correctable" | "none"
  flatFoot       Boolean   @default(false)
  colorBlind     Boolean   @default(false)
  surgeryHistory Boolean   @default(false)
  pushups        Int
  runMinutes     Float
  situps         Int

  // Computed scores (stored for history display)
  bmi            Float
  bmiScore       Int
  visionScore    Int
  conditionScore Int
  fitnessScore   Int
  medicalScore   Int
  riskLevel      RiskLevel

  createdAt      DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

// ---------------------------------------------------------------------------
// PIQ Builder — Submission Inputs
// ---------------------------------------------------------------------------

model PiqSubmission {
  id        String   @id @default(uuid())
  userId    String   @unique

  // Leadership signals
  positionOfResponsibility Boolean @default(false)
  teamSportsYears          Int     @default(0)
  nccInvolvement           Boolean @default(false)
  sportsLevel              String  @default("none") // "none" | "school" | "district" | "state"

  // Initiative signals
  organizedEvent   Boolean @default(false)
  volunteerWork    Boolean @default(false)

  // Responsibility signals
  familyResponsibility Boolean @default(false)
  academicConsistency  Boolean @default(false)

  // Confidence signals
  publicSpeaking           Boolean @default(false)
  competitiveAchievements  Boolean @default(false)

  // Meta
  attemptNumber Int @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ---------------------------------------------------------------------------
// PIQ Builder — Score History (one row per evaluation)
// ---------------------------------------------------------------------------

model PiqScore {
  id     String @id @default(uuid())
  userId String

  // OLQ sub-scores (0–10 each)
  leadership        Int
  initiative        Int
  responsibility    Int
  socialAdaptability Int
  confidence        Int
  consistency       Int

  // Computed totals
  totalScore Int
  riskLevel  RiskLevel

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

// ---------------------------------------------------------------------------
// OTP Authentication
// ---------------------------------------------------------------------------

model Otp {
  id        String   @id @default(uuid())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([email])
}
